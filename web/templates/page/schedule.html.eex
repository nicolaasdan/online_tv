<div class='container'>

<h4 id="scheduleheader">TODAY</h4>


<table class="table">
  <thead>

    <tr>
      <th>Show</th>
      <th>GMT</th>
      <th><b>Local</b></th>
    </tr>
  </thead>
  <tbody>
<%= for video <- @videos do %>
    <tr>
      <td><%= video.title %></td>
      <td><span class="gmt"><%= video.start.hour%></span>:<%= video.start.minute%> - <span class="gmt"><%= video.end.hour%></span>:<%= if (video.end.minute < 10) do "0" <> to_string(video.end.minute) else video.end.minute end %></td>
      <td><span class="mytz"><%= video.start.hour%></span>:<%= video.start.minute%> - <span class="mytz"><%= video.end.hour%></span>:<%= if (video.end.minute < 10) do "0" <> to_string(video.end.minute) else video.end.minute end %></td>
    </tr>

<% end %>
  </tbody>
</table>

<p id="timezone"></p>

</div>